{% extends 'base.html.twig' %}

{% block title %}Contact!{% endblock %}

{% block body %}
    <style>
        .lemon{
            height: 90%;
            width: 100%;
            border-radius: 87% 13% 50% 50% / 67% 50% 50% 33% ;
        }
    </style>
    <h1 class="title m-6">Contact</h1>

    {% for message in app.flashes('success') %}
        <div class="container mb-6">
            <div class="notification is-primary is-light">
                <button class="delete"></button>
                {{ message }}
            </div>
        </div>
    {% endfor %}

<div class="container">
    <div class="columns">
        <div class="column is-flex is-flex-direction-column is-justify-content-center">
            {{ form_start(contactForm, { 'attr': {'class': ''} })  }}
            <div class="column ">
                {{ form_label(contactForm.name) }}
                <div class="control has-icons-left mt-2">
                    {{ form_widget(contactForm.name, { 'attr': {'class': 'input is-medium is-primary'} }) }}
                    <span class="icon is-small is-left">
                    <i class="bi bi-person-fill"></i>
                </span>
                </div>
                {{ form_help(contactForm.name, { 'attr': {'class': 'help'} } ) }}
            </div>
            <div class="column">
                {{ form_label(contactForm.email) }}
                <div class="control has-icons-left mt-2">
                    {{ form_widget(contactForm.email, { 'attr': {'class': 'input is-medium is-primary'} }) }}
                    <span class="icon is-small is-left">
                    <i class="bi bi-envelope"></i>
                </span>
                </div>
                {{ form_help(contactForm.email, { 'attr': {'class': 'help'} } ) }}
            </div>
            <div class="column">
                {{ form_label(contactForm.subject) }}
                <div class="control has-icons-left mt-2">
                    {{ form_widget(contactForm.subject, { 'attr': {'class': 'input is-medium is-primary'} }) }}
                    <span class="icon is-small is-left">
                    <i class="bi bi-megaphone"></i>
                </span>
                </div>
                {{ form_help(contactForm.subject, { 'attr': {'class': 'help'} } ) }}
            </div>
            <div class="column">
                {{ form_label(contactForm.message) }}
                <div class="control mt-2">
                    {{ form_widget(contactForm.message, { 'attr': {'class': 'textarea is-medium is-primary'} }) }}

                </div>
                {{ form_help(contactForm.message, { 'attr': {'class': 'help'} } ) }}
            </div>
            <div class="column is-full is-flex is-justify-content-space-between">
                <div>
                    <button type="submit" class="button is-primary">
                    <span class="icon">
                        <i class="bi bi-send"></i>
                     </span>
                        <span>Envoyer</span>
                    </button>
                </div>
            </div>
            {{ form_end(contactForm) }}
        </div>
        <div class="column is-half">
            <img class="lemon" src="{{ asset('img/citron2.jpg') }}">
        </div>
    </div>
</div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                const $notification = $delete.parentNode;

                $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                });
            });
        });
    </script>
{% endblock %}

